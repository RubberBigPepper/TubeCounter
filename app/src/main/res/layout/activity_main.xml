<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_margin="0dp"
        android:id="@+id/view"
        opencv:camera_id="back"
        android:layout_weight="2"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:minWidth="200sp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSnapshot"
                android:text="@string/takeSnapShot"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMinRadius"
                android:text="@string/minRaduis"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekMinRadius"
                android:max="99"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMaxRadius"
                android:text="@string/maxRaduis"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekMaxRadius"
                android:progress="29"
                android:max="100"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMinDistance"
                android:text="@string/minDistance"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekMinDistance"
                android:progress="30"
                android:max="100"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>